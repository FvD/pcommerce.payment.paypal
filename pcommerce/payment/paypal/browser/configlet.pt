<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en" xml:lang="en"
      metal:use-macro="here/prefs_main_template/macros/master"
      i18n:domain="pcommerce">

<body>

  <div metal:fill-slot="prefs_configlet_main">

        <h1 class="documentFirstHeading" i18n:translate="">
            Paypal configuration
        </h1>

        <a href=""
           class="link-parent"
           tal:attributes="href string: $portal_url/plone_control_panel"
           i18n:domain="plone"
           i18n:translate="label_up_to_plone_setup">
            Up to Site Setup
        </a>

        <form action="."
              metal:define-macro="master"
              tal:attributes="action request/URL;"
              method="post"
              class="edit-form enableUnloadProtection"
              tal:define="errors view/errors">

            <fieldset>
                <legend i18n:translate="">Paypal configuration</legend>
                
                <div class="field"
                     tal:attributes="class python:'field'+(errors.has_key('paypal_receiver_email') and ' error' or '')">

                    <label i18n:translate=""
                           for="paypal_receiver_email">
                        PayPal Receiver Email
                    </label>

                    <span class="fieldRequired"
                          title="Required"
                          i18n:domain="plone"
                          i18n:attributes="title title_required;"
                          i18n:translate="label_required">
                        (Required)
                    </span>

                    <div class="formHelp"
                         i18n:translate="">
                        The paypal account-number (e.g. 99867-94913159)
                    </div>

                    <div tal:condition="python:errors.has_key('accountid')"
                         tal:content="errors/title|nothing">
                        The Error
                    </div>

                    <div class="widget">
                        <input id="paypal_receiver_email" name="paypal_receiver_email" value="99867-94913159" type="text"
                               tal:attributes="value view/values/paypal_receiver_email|request/paypal_receiver_email"/>
                    </div>
                </div>
                
                <div class="field"
                     tal:attributes="class python:'field'+(errors.has_key('test') and ' error' or '')">

                    <label i18n:translate=""
                           for="test">
                        Test Account
                    </label>

                    <div tal:condition="python:errors.has_key('test')"
                         tal:content="errors/title|nothing">
                        The Error
                    </div>

                    <div class="widget"
                         tal:define="value view/values/test|request/test">
                        <input id="test" name="test:boolean" value="1" type="checkbox"
                               tal:attributes="checked python: value and 'checked' or ''"/>
                    </div>
                </div>
                
                <div class="field"
                     tal:attributes="class python:'field'+(errors.has_key('password') and ' error' or '')">

                    <label i18n:translate=""
                           for="password">
                        Account Password
                    </label>

                    <div class="formHelp"
                         i18n:translate="">
                        The password for the account (only required for test accounts)
                    </div>

                    <div tal:condition="python:errors.has_key('password')"
                         tal:content="errors/title|nothing">
                        The Error
                    </div>

                    <div class="widget">
                        <input id="password" name="password" value="" type="text"
                               tal:attributes="value view/values/password|request/password"/>
                    </div>
                </div>
                
            </fieldset>

            <div id="actionsView" class="formControls">
                <span class="actionButtons">
                    <input name="paypal_save" value="Save" class="context" type="submit"
                           i18n:domain="plone"
                           i18n:attributes="value"/>
                </span>
            </div>

        </form>

  </div>

</body>
</html>

